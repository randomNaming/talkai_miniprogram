/* pages/dict/dict.wxss */

.dict-container {
  height: 100vh;
  background: #F5F7FA;
  display: flex;
  flex-direction: column;
}

/* Search Header */
.search-header {
  background: white;
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #E9ECEF;
}

.search-box {
  display: flex;
  align-items: center;
  background: #F8F9FA;
  border-radius: 32rpx;
  padding: 0 24rpx;
  height: 80rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin: 0 16rpx;
}

.search-input::placeholder {
  color: #999;
}

.search-btn {
  background: linear-gradient(135deg, #2C5AA0 0%, #4A7BC8 100%);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  min-width: 80rpx;
}

.search-btn::after {
  border: none;
}

.search-btn[disabled] {
  opacity: 0.6;
}

/* Recent Searches */
.recent-section {
  background: white;
  margin: 20rpx 0;
  padding: 32rpx 30rpx;
}

.recent-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.recent-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.clear-btn {
  background: none;
  border: none;
  color: #666;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
}

.clear-btn::after {
  border: none;
}

.recent-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.recent-item {
  background: #F8F9FA;
  border: 2rpx solid #E9ECEF;
  border-radius: 24rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  color: #333;
  transition: all 0.2s ease;
}

.recent-item::after {
  border: none;
}

.recent-item:active {
  background: #E9ECEF;
  transform: scale(0.95);
}

/* Results Section */
.results-section {
  flex: 1;
  background: white;
  margin: 20rpx 0 0 0;
  border-radius: 24rpx 24rpx 0 0;
}

.results-header {
  padding: 32rpx 30rpx 0 30rpx;
  border-bottom: 2rpx solid #F1F3F4;
}

.results-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.results-content {
  max-height: calc(100vh - 400rpx);
  overflow-y: auto;
}

.result-item {
  padding: 32rpx 30rpx;
  border-bottom: 2rpx solid #F1F3F4;
  position: relative;
}

.result-item:last-child {
  border-bottom: none;
}

.word-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.word-main {
  flex: 1;
}

.word-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C5AA0;
  margin-bottom: 8rpx;
}

.word-phonetic {
  font-size: 24rpx;
  color: #666;
  font-style: italic;
}

.word-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(44, 90, 160, 0.1);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #2C5AA0;
  transition: all 0.2s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  background: rgba(44, 90, 160, 0.2);
  transform: scale(0.9);
}

.word-definition {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 16rpx;
}

.word-translation {
  font-size: 24rpx;
  color: #666;
  background: #F8F9FA;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  margin-top: 12rpx;
}

/* Loading State */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 30rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 16rpx;
}

/* Empty State */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 30rpx;
}

.empty-icon {
  font-size: 80rpx;
  color: #E9ECEF;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
}

/* Error State */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 30rpx;
}

.error-icon {
  font-size: 80rpx;
  color: #DC3545;
  margin-bottom: 24rpx;
}

.error-title {
  font-size: 28rpx;
  color: #DC3545;
  margin-bottom: 12rpx;
}

.error-desc {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
}

.retry-btn {
  background: #2C5AA0;
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  margin-top: 32rpx;
}

.retry-btn::after {
  border: none;
}