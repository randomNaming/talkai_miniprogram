/* 测试连接页面样式 */

.container {
  padding: 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.test-buttons {
  margin-bottom: 32rpx;
}

.test-btn {
  width: 100%;
  height: 80rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  background-color: white;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.test-btn.primary {
  background-color: #007aff;
  color: white;
  border-color: #007aff;
}

.test-btn.secondary {
  background-color: #f8f9fa;
  color: #6c757d;
  border-color: #dee2e6;
}

.test-btn[disabled] {
  background-color: #e9ecef;
  color: #adb5bd;
  border-color: #dee2e6;
}

.results-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.results-container {
  height: 600rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.result-item {
  background-color: white;
  border-radius: 8rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  border-left: 6rpx solid #007aff;
}

.result-message {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  word-break: break-all;
}

.result-time {
  font-size: 22rpx;
  color: #999;
  text-align: right;
}