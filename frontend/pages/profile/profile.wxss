/* pages/profile/profile.wxss */

.profile-container {
  height: 100vh;
  background: #F5F7FA;
  padding: 0 30rpx;
}

/* User Header */
.profile-header {
  background: linear-gradient(135deg, #2C5AA0 0%, #4A7BC8 100%);
  padding: 60rpx 30rpx 40rpx 30rpx;
  margin: 0 -30rpx 20rpx -30rpx;
  color: white;
  display: flex;
  align-items: center;
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.user-level {
  font-size: 24rpx;
  opacity: 0.8;
  display: block;
  margin-bottom: 12rpx;
}

.user-details {
  display: flex;
  gap: 20rpx;
}

.detail {
  font-size: 22rpx;
  opacity: 0.7;
  background: rgba(255, 255, 255, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.edit-btn {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
}

.edit-btn::after {
  border: none;
}

.edit-icon {
  font-size: 28rpx;
}

/* Statistics Section */
.stats-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #2C5AA0;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

/* Vocabulary Section */
.vocab-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx 30rpx;
  margin-bottom: 20rpx;
}

.vocab-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.vocab-stat-item {
  text-align: center;
  flex: 1;
}

.vocab-stat-number {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C5AA0;
  display: block;
  margin-bottom: 6rpx;
}

.vocab-stat-label {
  font-size: 20rpx;
  color: #666;
}

.loaded-levels {
  border-top: 2rpx solid #F1F3F4;
  padding-top: 20rpx;
}

.levels-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.level-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.level-tag {
  background: #E8F0FE;
  color: #2C5AA0;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 2rpx solid #D1E7FD;
}

/* Actions Section */
.actions-section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F8F9FA;
  border: 2rpx solid #E9ECEF;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #495057;
  transition: all 0.2s ease;
}

.action-btn:last-child {
  margin-bottom: 0;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  background: #E9ECEF;
  transform: scale(0.98);
}

.action-btn.danger {
  background: #FDF2F2;
  border-color: #FCE8E8;
  color: #DC3545;
}

.action-btn.danger:active {
  background: #FCE8E8;
}

.action-btn.debug {
  background: #F3E8FF;
  border-color: #E9D5FF;
  color: #8B5CF6;
}

.action-btn.debug:active {
  background: #E9D5FF;
}

.action-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.action-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* Modal Styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 60rpx 40rpx;
  /* 确保背景点击可以正确检测 */
  pointer-events: auto;
}

.modal-content {
  background: white;
  border-radius: 16rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  /* 防止点击模态框内容时关闭 */
  pointer-events: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 0 32rpx;
  border-bottom: 2rpx solid #F1F3F4;
  padding-bottom: 24rpx;
  margin-bottom: 24rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  background: none;
  border: none;
  font-size: 48rpx;
  color: #999;
  padding: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-close::after {
  border: none;
}

.modal-body {
  padding: 0 32rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.form-field {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 2rpx solid #E9ECEF;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #F8F9FA;
  color: #333;
}

.form-input:focus {
  border-color: #2C5AA0;
  background: white;
}

.form-picker {
  padding: 20rpx 24rpx;
  border: 2rpx solid #E9ECEF;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #F8F9FA;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-picker::after {
  content: '▼';
  font-size: 20rpx;
  color: #999;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx 32rpx 32rpx;
  border-top: 2rpx solid #F1F3F4;
  margin-top: 24rpx;
}

.modal-btn {
  flex: 1;
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  background: #F8F9FA;
  color: #6C757D;
  border: 2rpx solid #E9ECEF;
}

.modal-btn.save {
  background: #2C5AA0;
  color: white;
}

.modal-btn:active {
  transform: scale(0.98);
}

.modal-btn.cancel:active {
  background: #E9ECEF;
}

.modal-btn.save:active {
  background: #1e3d6f;
}