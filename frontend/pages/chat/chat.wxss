/* Error Type Colors (from talkai_py) */
.error-type-translation {
  color: #e74c3c !important;
}

.error-type-vocabulary {
  color: #f39c12 !important;
}

.error-type-collocation {
  color: #9b59b6 !important;
}

.error-type-grammar {
  color: #2980b9 !important;
}

/* Vocabulary Suggestions */
.vocab-suggestions {
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  padding: 16rpx;
  background: #F8F9FE;
  border: 2rpx solid #E1E8FF;
  border-radius: 16rpx;
  width: calc(100vw - 160rpx);
  max-width: 550rpx;
  min-width: 320rpx;
  box-sizing: border-box;
}

.suggestion-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.suggestion-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
  color: #4A90E2;
}

.suggestion-title {
  font-size: 22rpx;
  font-weight: 600;
  color: #4A90E2;
}

.suggestion-words {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  width: 100%;
  box-sizing: border-box;
}

.suggested-word {
  background: #2C5AA0;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  cursor: pointer;
  white-space: nowrap;
  display: inline-block;
  text-align: center;
  min-width: 60rpx;
}

.suggested-word:active {
  background: #1e3a5f;
  transform: scale(0.95);
}

/* Loading Message */
.loading-bubble {
  background: #F1F3F4;
  padding: 20rpx 24rpx;
}

.typing-indicator {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.typing-dot {
  width: 8rpx;
  height: 8rpx;
  background: #999;
  border-radius: 50%;
  animation: typing 1.4s infinite ease-in-out;
}

.typing-dot:nth-child(1) { animation-delay: 0ms; }
.typing-dot:nth-child(2) { animation-delay: 200ms; }
.typing-dot:nth-child(3) { animation-delay: 400ms; }

@keyframes typing {
  0%, 60%, 100% {
    transform: scale(1);
    opacity: 0.5;
  }
  30% {
    transform: scale(1.2);
    opacity: 1;
  }
}

/* Message Actions */
.message-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
  justify-content: flex-start;
  align-items: center;
}

.action-btn-small {
  width: 64rpx;
  height: 64rpx;
  background: rgba(44, 90, 160, 0.1);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  z-index: 10;
}

.action-btn-small::after {
  border: none;
}

.action-btn-small:hover {
  background: rgba(44, 90, 160, 0.2);
  transform: scale(1.1);
}

.action-icon-small {
  font-size: 28rpx;
  line-height: 1;
}

/* Input Area */
.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: white;
  border-top: 2rpx solid #E9ECEF;
  padding: 24rpx 30rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.input-container {
  display: flex;
  align-items: flex-end;
  background: #F8F9FA;
  border-radius: 32rpx;
  padding: 16rpx 20rpx;
  min-height: 64rpx;
}

.message-input {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.4;
  max-height: 200rpx;
  background: transparent;
  border: none;
  outline: none;
  resize: none;
  color: #333;
}

.message-input::placeholder {
  color: #999;
}

.input-actions {
  margin-left: 20rpx;
}

.send-btn {
  width: 64rpx;
  height: 64rpx;
  background: #E9ECEF;
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.send-btn::after {
  border: none;
}

.send-btn.active {
  background: linear-gradient(135deg, #2C5AA0 0%, #4A7BC8 100%);
  color: white;
}

.send-btn[disabled] {
  opacity: 0.6;
}

.send-icon {
  font-size: 24rpx;
}

/* Quick Actions */
.quick-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
  flex-wrap: wrap;
}

.quick-btn {
  padding: 16rpx 24rpx;
  background: rgba(44, 90, 160, 0.1);
  border: none;
  border-radius: 32rpx;
  font-size: 24rpx;
  color: #2C5AA0;
  transition: all 0.3s ease;
}

.quick-btn::after {
  border: none;
}

.quick-btn:hover {
  background: rgba(44, 90, 160, 0.2);
  transform: translateY(-2rpx);
}

.quick-text {
  font-size: 24rpx;
}

/* Settings Modal */
.settings-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding: 40rpx 30rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  animation: slideUp 0.3s ease-out;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  background: #F1F3F4;
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
}

.modal-close::after {
  border: none;
}

.modal-body {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
}

.setting-switch {
  transform: scale(0.8);
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

@keyframes pulse {
  0% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.2);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}