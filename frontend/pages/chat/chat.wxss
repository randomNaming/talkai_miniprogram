/* pages/chat/chat.wxss */

.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #F5F7FA;
  position: relative;
}

/* Header */
.chat-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: linear-gradient(135deg, #2C5AA0 0%, #4A7BC8 100%);
  padding: 20rpx 30rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(44, 90, 160, 0.2);
}

.header-content {
  flex: 1;
}

.chat-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 6rpx;
}

.chat-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.status-dot.online {
  background: #28A745;
  box-shadow: 0 0 8rpx rgba(40, 167, 69, 0.5);
}

.status-dot.offline {
  background: #DC3545;
}

.status-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Login Status */
.login-status {
  display: flex;
  align-items: center;
}

.login-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  background: #FFC107;
}

.login-dot.loading {
  animation: pulse 1.5s infinite;
}

.login-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.login-message {
  display: flex;
  align-items: center;
}

.login-message .login-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.1);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:hover {
  background: rgba(255, 255, 255, 0.2);
}

.action-icon {
  font-size: 24rpx;
}

/* Messages Container */
.messages-container {
  flex: 1;
  padding: 20rpx 0;
  margin-top: calc(100rpx + env(safe-area-inset-top));
  margin-bottom: 200rpx;
  overflow-y: auto;
}

.messages-list {
  padding: 0 30rpx;
}

.message-item {
  display: flex;
  margin-bottom: 32rpx;
  align-items: flex-start;
}

.message-item.user-message {
  flex-direction: row !important;
  justify-content: flex-start !important;
}

.message-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin: 0 20rpx;
  overflow: hidden;
  background: #F1F3F4;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* AI消息头像在左侧 */
.ai-message .message-avatar {
  order: 1;
}

/* AI消息内容在右侧 */
.ai-message .message-content {
  order: 2;
}

/* 用户消息内容在左侧 */
.user-message .message-content {
  order: 1 !important;
  margin-right: auto !important;
  display: flex !important;
  flex-direction: column !important;
  align-items: flex-end !important;
  max-width: calc(100% - 100rpx) !important;
}

/* 用户消息头像在右侧 */
.user-message .message-avatar {
  order: 2 !important;
  margin: 0 0 0 20rpx !important;
}

.avatar-icon {
  font-size: 28rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.message-content {
  max-width: calc(100% - 120rpx);
  min-width: 0;
  width: 100%;
}

.ai-message .message-content {
  max-width: calc(100% - 100rpx);
}

/* 已在上面定义，这里删除重复项 */

.message-bubble {
  background: white;
  border-radius: 24rpx;
  padding: 24rpx 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  word-wrap: break-word;
  position: relative;
}

.user-message .message-bubble {
  background: linear-gradient(135deg, #2C5AA0 0%, #4A7BC8 100%);
  color: white;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.user-message .message-text {
  color: white;
}

.message-time {
  font-size: 20rpx;
  color: #999;
  margin-top: 12rpx;
  text-align: left;
}

.user-message .message-time {
  text-align: right;
}

/* System Messages */
.message-item.system-message {
  justify-content: center;
  margin-bottom: 20rpx;
}

.system-message .message-avatar {
  background: #E3F2FD;
  color: #1976D2;
}

.system-message .message-bubble {
  background: #E8F5E8;
  border: 2rpx solid #C8E6C9;
  text-align: center;
  font-size: 24rpx;
  color: #2E7D32;
}

/* Grammar Correction */
.grammar-correction {
  margin-top: 20rpx;
  background: #FFF8E1;
  border: 2rpx solid #FFE082;
  border-radius: 16rpx;
  padding: 20rpx;
}

.correction-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.correction-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.correction-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #F57C00;
  flex: 1;
}

.confidence-level {
  font-size: 20rpx;
  color: #F57C00;
  opacity: 0.8;
  margin-left: 8rpx;
}

.correction-content {
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.corrected-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.corrected-text-rich {
  font-size: 26rpx;
  line-height: 1.5;
}

/* Correction Explanation */
.correction-explanation {
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background: #F0F4FF;
  border-radius: 12rpx;
  border-left: 4rpx solid #2196F3;
}

.explanation-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
}

.explanation-text {
  font-size: 22rpx;
  color: #1976D2;
  line-height: 1.4;
}

.vocab-to-learn {
  margin-top: 16rpx;
}

.vocab-title {
  font-size: 22rpx;
  color: #F57C00;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.vocab-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.vocab-item {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  transition: all 0.3s ease;
}

.vocab-item:active {
  background: #F5F5F5;
  transform: scale(0.98);
}

.vocab-original {
  font-size: 24rpx;
  color: #DC3545;
  font-weight: 500;
}

.vocab-arrow {
  font-size: 20rpx;
  color: #999;
  margin: 0 12rpx;
}

.vocab-corrected {
  font-size: 24rpx;
  color: #28A745;
  font-weight: 500;
  flex: 1;
}

