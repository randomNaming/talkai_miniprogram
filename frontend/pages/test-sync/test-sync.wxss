/* 词汇同步测试页面样式 */

.container {
  padding: 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

/* 状态信息区域 */
.status-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.1);
}

.status-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.status-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  font-weight: 500;
}

.value.success {
  color: #52c41a;
}

.value.error {
  color: #ff4d4f;
}

.value.warning {
  color: #faad14;
}

/* 测试按钮区域 */
.test-buttons {
  margin-bottom: 32rpx;
}

.btn {
  width: 100%;
  height: 80rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn.primary {
  background-color: #1890ff;
  color: white;
}

.btn.primary[disabled] {
  background-color: #d9d9d9;
  color: #999;
}

.btn.secondary {
  background-color: white;
  color: #1890ff;
  border: 2rpx solid #1890ff;
}

.btn.ghost {
  background-color: transparent;
  color: #666;
  border: 2rpx solid #d9d9d9;
}

.button-group {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.button-group .btn {
  flex: 1;
  margin-bottom: 0;
}

/* 测试结果区域 */
.results-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.1);
}

.results-container {
  height: 600rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.result-item {
  background-color: white;
  border-radius: 8rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  border-left: 6rpx solid #1890ff;
}

.result-message {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.result-time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}