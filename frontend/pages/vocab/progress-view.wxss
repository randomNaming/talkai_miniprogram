/* 词汇学习进度页面样式 */

.progress-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 基本统计卡片 */
.stats-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.stats-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 掌握度进度条 */
.mastery-progress {
  border-top: 2rpx solid #ecf0f1;
  padding-top: 32rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

.progress-percent {
  font-size: 28rpx;
  font-weight: bold;
  color: #27ae60;
}

.progress-bar {
  height: 16rpx;
  background: #ecf0f1;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #27ae60 0%, #2ecc71 100%);
  border-radius: 8rpx;
  transition: width 0.6s ease;
}

/* 本月统计卡片 */
.monthly-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 24rpx;
}

.monthly-stats {
  display: flex;
  justify-content: space-around;
}

.monthly-item {
  text-align: center;
  flex: 1;
}

.monthly-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 8rpx;
}

.monthly-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 7天学习趋势卡片 */
.weekly-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.chart-container {
  margin-top: 24rpx;
}

.chart-area {
  position: relative;
  height: 300rpx;
}

/* 简单条形图 */
.chart-bars {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  height: 240rpx;
  padding: 0 16rpx;
}

.bar-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.bar-container {
  display: flex;
  align-items: flex-end;
  height: 180rpx;
  gap: 4rpx;
}

.bar {
  width: 16rpx;
  border-radius: 8rpx 8rpx 0 0;
  min-height: 8rpx;
}

.new-words-bar {
  background: linear-gradient(180deg, #3498db 0%, #2980b9 100%);
}

.mastered-words-bar {
  background: linear-gradient(180deg, #27ae60 0%, #229954 100%);
}

.bar-label {
  font-size: 20rpx;
  color: #7f8c8d;
  margin-top: 8rpx;
  text-align: center;
}

/* 图例 */
.legend {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  margin-top: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-color {
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
}

.legend-color.new-words {
  background: #3498db;
}

.legend-color.mastered-words {
  background: #27ae60;
}

.legend-text {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 操作按钮 */
.actions {
  text-align: center;
  margin-top: 40rpx;
}

.refresh-btn {
  background: white;
  color: #667eea;
  border: 4rpx solid #667eea;
  border-radius: 48rpx;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.refresh-btn[disabled] {
  background: #bdc3c7;
  color: #7f8c8d;
  border-color: #bdc3c7;
  box-shadow: none;
}