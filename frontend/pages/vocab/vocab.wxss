/* pages/vocab/vocab.wxss */
.vocab-container {
  height: 100vh;
  background: #F5F7FA;
}

.vocab-header {
  background: white;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #E9ECEF;
}

.search-container {
  display: flex;
  align-items: center;
  background: #F8F9FA;
  border-radius: 32rpx;
  padding: 12rpx 20rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  border: none;
  background: transparent;
}

.search-btn {
  width: 48rpx;
  height: 48rpx;
  background: transparent;
  border: none;
  font-size: 24rpx;
}

.stats-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.stats-item {
  font-size: 24rpx;
  color: #666;
}

/* 学习进度条样式 */
.progress-container {
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.progress-container:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.progress-label {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.progress-text {
  font-size: 20rpx;
  color: #4CAF50;
  font-weight: 600;
}

.progress-arrow {
  font-size: 24rpx;
  color: #999;
  font-weight: bold;
}

.progress-bar {
  position: relative;
  height: 8rpx;
  background-color: #E9ECEF;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50 0%, #81C784 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.vocab-list {
  flex: 1;
  padding: 20rpx 30rpx;
}

.vocab-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  position: relative;
  transition: all 0.3s ease;
}

/* 高亮显示的等级词汇 */
.vocab-item.highlighted-level-vocab {
  background: linear-gradient(135deg, #FFF8E1 0%, #FFECB3 100%);
  border: 2rpx solid #FF9800;
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.3);
  animation: highlightPulse 2s ease-in-out infinite;
}

/* 普通的最近等级词汇 */
.vocab-item.recent-level-vocab {
  border-left: 6rpx solid #4CAF50;
}

@keyframes highlightPulse {
  0%, 100% { 
    transform: scale(1); 
    box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.3);
  }
  50% { 
    transform: scale(1.02); 
    box-shadow: 0 6rpx 20rpx rgba(255, 152, 0, 0.4);
  }
}

/* 高亮标记 */
.highlight-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #FF5722 0%, #FF9800 100%);
  color: white;
  font-size: 20rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 87, 34, 0.4);
  z-index: 10;
  animation: badgeBounce 0.5s ease-out;
}

@keyframes badgeBounce {
  0% { transform: scale(0) rotate(45deg); opacity: 0; }
  50% { transform: scale(1.2) rotate(0deg); opacity: 1; }
  100% { transform: scale(1) rotate(0deg); opacity: 1; }
}

/* 等级信息 */
.vocab-level {
  font-size: 22rpx;
  color: #4CAF50;
  background: #E8F5E8;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  display: inline-block;
  margin-top: 6rpx;
  font-weight: 500;
}

.vocab-word {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C5AA0;
  margin-bottom: 8rpx;
}

.vocab-phonetic {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.vocab-meaning {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.vocab-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.vocab-source {
  font-size: 20rpx;
  color: #999;
  background: #F1F3F4;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.vocab-mastery {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.vocab-mastery.mastered {
  background: #D4EDDA;
  color: #155724;
}

.vocab-mastery.learning {
  background: #FFF3CD;
  color: #856404;
}

.add-btn {
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #2C5AA0 0%, #4A7BC8 100%);
  border: none;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(44, 90, 160, 0.3);
}

.add-icon {
  color: white;
  font-size: 40rpx;
  font-weight: 300;
}